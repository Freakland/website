@import "./normalize.styl"

*
  box-sizing: border-box;
  transition: all linear 0.3s;

html, body
  font-family: 'Open sans', sans-serif;
  font-size: 10px;
  line-height: 1.5;
  color: #1C1919;
  background: #FFF;
  font-weight: 400;
  -o-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  position: static;
  min-height: 100%;
  height: 100%;

h1, h2, h3, h4, h5, h6
  font-weight 400

h1, .h1
  margin-top: 0;
  font-size 4rem

h2, .h2
  font-size 3rem
  text-align center

.h3
  text-align center

h3, .h3
  font-size 2.5rem

strong { font-weight: 700; }
a { color: #1C1919; text-decoration: none; }
a:hover { text-decoration: underline; }
ul { list-style: none; }

header { position: relative; height: auto; }
header > .topbar { position: relative; height: 8rem; }
header > .topbar > nav { width: 100%; margin: 0 auto; background: #FFF; height: 8rem; padding: 0 4rem; z-index: 99; }
header > .topbar > nav > h1.logo { text-align: left; margin: 0; display: inline-block; }
header > .topbar > nav > h1.logo > a { display: inline-block; height: 100% }
header > .topbar > nav > h1.logo > a > img { margin-top: 1rem; max-height: 6rem; }
header > .topbar > nav > ul { padding: 0; margin: 0; text-align: right; float: right; height: 100%; }
header > .topbar > nav > ul:after { clear: both; }
header > .topbar > nav > ul > li { display: inline-block; height: 100%; text-align: right; font-size: 2rem; }
header > .topbar > nav > ul > li.active { background: #EDEDED; }
header > .topbar > nav > ul > li:last-of-type { background: #1c1919; }
header > .topbar > nav > ul > li:last-of-type > a { color: #FFF; }
header > .topbar > nav > ul > li:last-of-type > a:hover { text-decoration: none; color: #FFF; background: #33B67C; opacity: 1; }
header > .topbar > nav > ul > li:last-of-type.active > a { background: #33B67C; opacity: 1; }
header > .topbar > nav > ul > li > a { display: block; height: 100%; vertical-align: middle; padding: 2.5rem; }
header > .topbar > nav > ul > li > a:hover { text-decoration: none; background: #EDEDED; opacity: .7; }
header > .banner { min-height: 350px; width: 100%; display: table; }
header > .banner > div { background: rgba(2,119,158,.85); display: table-cell; position: static; height: 100%; width: 100%; vertical-align: middle; }
header > .banner > div > * { text-align: center; color: #FFF; }

header > .topbar.topbar-fixed { position: fixed; top: 0; left: 0; width: 100%; }
header > .topbar.topbar-fixed > nav { border-bottom: 1px #EDEDED solid; }

section { margin: 50px auto 0; width: 800px; position: static; min-height: 40%; }
section > p { font-size: 2rem; width: 800px; margin: 0 auto; text-align: justify; }
section > p + p { margin-top: 30px; }

footer { margin-top: 100px; padding: 30px; }
footer img { max-height: 40px; }
footer > p { font-size: 1.2rem; color: #8C8C8C; text-align: center; }
