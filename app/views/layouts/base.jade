<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        title #{site.name} - #{site.description}
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300', rel='stylesheet', type='text/css')
        link(rel="stylesheet", type="text/css", href="/public/stylesheets/all.css", media="screen")
    body
        .menu-items
            ul
                li
                    a(href="/") Home
                li
                    a(href="/services") Services
                li
                    a(href="/about") About
                li
                    a(href="/contact") Hire us
        header.header
            .topbar-fake
            .topbar
                nav
                    h1.logo
                        a(href="/")
                            img(src="/public/images/logo.svg", alt="")
                    ul
                        li.menu
                            a(href="#") Menú
                        if req.path == '/services'
                            li.active
                                a(href="/services") Services
                        else
                            li
                                a(href="/services") Services
                        if req.path == '/about'
                            li.active
                                a(href="/about") About
                        else
                            li
                                a(href="/about") About
                        if req.path == '/contact'
                            li.active
                                a(href="/contact") Hire us
                        else
                            li
                                a(href="/contact") Hire us
            block banner
        block main
        footer
            p
                | #{site.name} &copy; #{site.year}
        
        script.
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
          ga('create', 'UA-62223525-1', 'auto');
          ga('send', 'pageview');

        if environment == 'production'
            script(src="/public/javascripts/all.min.js", type="text/javascript")
        else
            script(src="/app/assets/javascripts/vendor/jquery/dist/jquery.js", type="text/javascript")
            script(src="/app/assets/javascripts/vendor/modernizr/modernizr.js", type="text/javascript")
            script(src="/app/assets/javascripts/vendor/jquery-backstretch/jquery.backstretch.js", type="text/javascript")
            script(src="/app/assets/javascripts/vendor/Snap.svg/dist/snap.svg.js", type="text/javascript")
            script(src="/app/assets/javascripts/all.js", type="text/javascript")